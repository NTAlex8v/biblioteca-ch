
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Role is fetched from the user's document in Firestore.
    function getUserRole() {
      // Use exists() to prevent errors if the user document doesn't exist yet.
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAdmin() {
      return isSignedIn() && getUserRole() == 'Admin';
    }
    
    function isEditor() {
       return isSignedIn() && getUserRole() == 'Editor';
    }

    function isAdminOrEditor() {
      let role = getUserRole();
      return isSignedIn() && (role == 'Admin' || role == 'Editor');
    }

    // Rules for each collection

    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isAdmin();
      
      // User can create their own document, but not set their own role.
      allow create: if isOwner(userId) && !('role' in request.resource.data);
      
      // A user can update their own non-role info. Admin can update anything.
      allow update: if (isOwner(userId) && !('role' in request.resource.data)) || isAdmin();
      
      allow delete: if isAdmin();
    }

    match /categories/{categoryId} {
      allow get, list: if true; // Publicly readable
      allow create, update, delete: if isAdminOrEditor();
    }

    match /folders/{folderId} {
      allow get, list: if true; // Publicly readable
      allow create: if isSignedIn();
      
      // Owner, Admin, or Editor can update/delete.
      allow update, delete: if isSignedIn() && (request.auth.uid == resource.data.createdBy || isAdminOrEditor());
    }
    
    match /documents/{documentId} {
      allow get, list: if true; // Publicly readable
      allow create: if isSignedIn();
      
      // Owner, Admin, or Editor can update/delete.
      allow update, delete: if isSignedIn() && (request.auth.uid == resource.data.createdBy || isAdminOrEditor());
    }
    
    match /tags/{tagId} {
        allow get, list: if true; // Publicly readable
        allow create, update, delete: if isAdminOrEditor();
    }

    match /users/{userId}/auditLogs/{logId} {
      // Users can only read and write to their own audit log.
      allow read, write: if isOwner(userId);
    }
  }
}
