{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user in the library system, including their role.",
      "properties": {
        "id": { "type": "string", "description": "User's unique ID (from Firebase Auth)." },
        "name": { "type": "string", "description": "User's full name." },
        "email": { "type": "string", "description": "User's email address.", "format": "email" },
        "avatarUrl": { "type": "string", "description": "URL for the user's profile picture.", "format": "uri" },
        "role": { "type": "string", "description": "User's role.", "enum": ["Admin", "Editor", "User"] },
        "createdAt": { "type": "string", "description": "Timestamp of user creation.", "format": "date-time" }
      },
      "required": ["id", "name", "email", "role", "createdAt"]
    },
    "Category": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Category",
      "type": "object",
      "description": "Represents a top-level category for organizing documents.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the category." },
        "name": { "type": "string", "description": "Name of the category." },
        "description": { "type": "string", "description": "A brief description of the category." }
      },
      "required": ["id", "name", "description"]
    },
    "Folder": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Folder",
      "type": "object",
      "description": "Represents a folder within a category or another folder, for nested organization.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the folder." },
        "name": { "type": "string", "description": "Name of the folder." },
        "categoryId": { "type": "string", "description": "ID of the parent category." },
        "parentFolderId": { "type": ["string", "null"], "description": "ID of the parent folder, if nested." },
        "createdBy": { "type": "string", "description": "User ID of the creator." }
      },
      "required": ["id", "name", "categoryId", "createdBy"]
    },
    "Document": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Document",
      "type": "object",
      "description": "Represents a single document/resource in the library.",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "author": { "type": "string" },
        "year": { "type": "number" },
        "description": { "type": "string" },
        "fileUrl": { "type": "string", "format": "uri" },
        "categoryId": { "type": "string" },
        "folderId": { "type": ["string", "null"] },
        "createdBy": { "type": "string" },
        "lastUpdated": { "type": "string", "format": "date-time" },
        "thumbnailUrl": { "type": "string", "format": "uri" },
        "subject": { "type": "string" },
        "version": { "type": "string" },
        "tagIds": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["id", "title", "author", "year", "fileUrl", "categoryId", "createdBy", "lastUpdated"]
    },
    "AuditLog": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "AuditLog",
        "type": "object",
        "description": "Represents a log of a user's action in the system.",
        "properties": {
            "id": { "type": "string" },
            "timestamp": { "type": "string", "format": "date-time" },
            "userId": { "type": "string" },
            "userName": { "type": "string" },
            "action": { "type": "string", "enum": ["create", "update", "delete", "role_change"] },
            "entityType": { "type": "string", "enum": ["Document", "Category", "Folder", "User", "Tag"] },
            "entityId": { "type": "string" },
            "entityName": { "type": "string" },
            "details": { "type": "string" }
        },
        "required": ["id", "timestamp", "userId", "userName", "action", "entityType", "entityId", "details"]
    },
    "Tag": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Tag",
      "type": "object",
      "description": "Represents a tag that can be applied to documents for cross-classification.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the tag." },
        "name": { "type": "string", "description": "Name of the tag." }
      },
      "required": ["id", "name"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "google.com"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": { "$ref": "#/backend/entities/User" },
          "description": "Stores user profiles and roles."
        }
      },
      {
        "path": "/categories/{categoryId}",
        "definition": {
          "entityName": "Category",
          "schema": { "$ref": "#/backend/entities/Category" },
          "description": "Stores all categories."
        }
      },
      {
        "path": "/folders/{folderId}",
        "definition": {
          "entityName": "Folder",
          "schema": { "$ref": "#/backend/entities/Folder" },
          "description": "Stores all folders, linked to categories and parent folders."
        }
      },
      {
        "path": "/documents/{documentId}",
        "definition": {
          "entityName": "Document",
          "schema": { "$ref": "#/backend/entities/Document" },
          "description": "Stores all documents."
        }
      },
      {
        "path": "/users/{userId}/auditLogs/{logId}",
        "definition": {
            "entityName": "AuditLog",
            "schema": { "$ref": "#/backend/entities/AuditLog" },
            "description": "Stores a user's activity log."
        }
      },
      {
        "path": "/tags/{tagId}",
        "definition": {
            "entityName": "Tag",
            "schema": { "$ref": "#/backend/entities/Tag" },
            "description": "Stores all tags for documents."
        }
      }
    ]
  }
}