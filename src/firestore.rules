
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Function to check for Admin role from custom claims
    function isAdmin() {
      return isSignedIn() && request.auth.token.role == 'Admin';
    }

    // Function to check for Admin or Editor role from custom claims
    function isAdminOrEditor() {
      return isSignedIn() && (request.auth.token.role == 'Admin' || request.auth.token.role == 'Editor');
    }
    
    // User profiles can be read by anyone to get names/avatars.
    // List is only for admins.
    // Updates can only be done by the owner for their own profile.
    // Role changes are handled exclusively by a Cloud Function.
    match /users/{userId} {
      allow get: if true;
      allow list: if isAdmin();
      // Allow create on signup and update by owner, but NOT role field.
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) && !("role" in request.resource.data);
      allow delete: if isAdmin();
    }

    // Categories can be read by anyone.
    // Writes are restricted to Admins and Editors via custom claims.
    match /categories/{categoryId} {
      allow get, list: if true;
      allow create, update, delete: if isAdminOrEditor();
    }

    // Folders can be read by anyone.
    // Create is allowed for any signed-in user.
    // Update/Delete is restricted to the folder's creator or an admin/editor.
    match /folders/{folderId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update, delete: if isOwner(resource.data.createdBy) || isAdminOrEditor();
    }



    // Tags can be read by anyone.
    // Writes are restricted to Admins and Editors.
    match /tags/{tagId} {
      allow get, list: if true;
      allow create, update, delete: if isAdminOrEditor();
    }
    
    // Documents can be read by anyone.
    // Create is allowed for any signed-in user.
    // Update/Delete is restricted to the document's creator or an admin/editor.
    match /documents/{documentId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update, delete: if isOwner(resource.data.createdBy) || isAdminOrEditor();
    }
    
    // Audit logs can only be read by their owner.
    // Creation is handled by server-side logic (e.g., Cloud Functions).
    match /users/{userId}/auditLogs/{logId} {
      allow get, list: if isOwner(userId);
      allow create, update, delete: if false; // Only backend processes can create logs
    }
  }
}
