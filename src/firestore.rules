
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Correctly checks for 'Admin' role using custom claims on the ID token.
    function isAdmin() {
      return isSignedIn() && request.auth.token.role == 'Admin';
    }

    // Correctly checks for 'Admin' or 'Editor' role using custom claims.
    function isAdminOrEditor() {
      return isSignedIn() && (request.auth.token.role == 'Admin' || request.auth.token.role == 'Editor');
    }
    
    match /users/{userId} {
      allow get: if true;
      allow list: if isAdmin();
      allow create: if isOwner(userId);
      // An admin can update the role of any user.
      // A user can update their own profile (except the role).
      allow update: if isAdmin() || (isOwner(userId) && request.resource.data.role == resource.data.role);
      allow delete: if isAdmin();
    }

    match /categories/{categoryId} {
      allow get, list: if true;
      allow create, update, delete: if isAdminOrEditor();
    }

    match /folders/{folderId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update, delete: if isOwner(resource.data.createdBy) || isAdminOrEditor();
    }

    match /tags/{tagId} {
      allow get, list: if true;
      allow create, update, delete: if isAdminOrEditor();
    }
    
    match /documents/{documentId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update, delete: if isOwner(resource.data.createdBy) || isAdminOrEditor();
    }
    
    match /users/{userId}/auditLogs/{logId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update, delete: if false;
    }
  }
}
