
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Function to get user role from their Firestore document
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    // Function to check for Admin role by reading the user's document
    function isAdmin() {
      return isSignedIn() && getUserRole(request.auth.uid) == 'Admin';
    }

    // Function to check for Admin or Editor role by reading the user's document
    function isAdminOrEditor() {
      let userRole = getUserRole(request.auth.uid);
      return isSignedIn() && (userRole == 'Admin' || userRole == 'Editor');
    }
    
    // User profiles can be read by anyone to get names/avatars.
    // List is only for admins.
    // Updates can only be done by the owner for their own profile,
    // but the role field can only be changed by an Admin.
    match /users/{userId} {
      allow get: if true;
      allow list: if isAdmin();
      allow create: if isOwner(userId);
      // Allow owner to update their own info, but not their role
      allow update: if isOwner(userId) && !("role" in request.resource.data);
      // Allow an admin to update anyone's role
      allow update: if isAdmin() && "role" in request.resource.data;
      allow delete: if isAdmin();
    }

    // Categories can be read by anyone.
    // Writes are restricted to Admins and Editors.
    match /categories/{categoryId} {
      allow get, list: if true;
      allow create, update, delete: if isAdminOrEditor();
    }

    // Folders can be read by anyone.
    // Create is allowed for any signed-in user.
    // Update/Delete is restricted to the folder's creator or an admin/editor.
    match /folders/{folderId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update, delete: if isOwner(resource.data.createdBy) || isAdminOrEditor();
    }

    // Tags can be read by anyone.
    // Writes are restricted to Admins and Editors.
    match /tags/{tagId} {
      allow get, list: if true;
      allow create, update, delete: if isAdminOrEditor();
    }
    
    // Documents can be read by anyone.
    // Create is allowed for any signed-in user.
    // Update/Delete is restricted to the document's creator or an admin/editor.
    match /documents/{documentId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update, delete: if isOwner(resource.data.createdBy) || isAdminOrEditor();
    }
    
    // Audit logs can only be read by their owner.
    // Creation should be handled by server-side logic (e.g., Cloud Functions).
    match /users/{userId}/auditLogs/{logId} {
      allow get, list: if isOwner(userId);
      allow create, update, delete: if false;
    }
  }
}
