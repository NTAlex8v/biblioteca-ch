
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Reads the role from a separate /roles/{userId} document.
    // This is more efficient and secure for role-based access control.
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/roles/$(userId)).data.role;
    }

    function isAdmin() {
      // Check for Admin role by reading the dedicated role document.
      return isSignedIn() && getUserRole(request.auth.uid) == 'Admin';
    }

    function isAdminOrEditor() {
      let role = getUserRole(request.auth.uid);
      return isSignedIn() && (role == 'Admin' || role == 'Editor');
    }
    
    // The /roles collection holds the permission level for each user.
    // Reading this collection is restricted. Writing is only allowed for Admins.
    match /roles/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create, update: if isAdmin();
      allow delete: if false; // Roles should be changed, not deleted.
    }

    match /users/{userId} {
      // Any authenticated user can get a user's public profile.
      allow get: if isSignedIn();
      // Only admins can list all users.
      allow list: if isAdmin();
      // A user can create their own profile document.
      allow create: if isOwner(userId);
      // An admin can update any user's profile.
      // A user can update their own profile.
      allow update: if isAdmin() || isOwner(userId);
      // Only admins can delete user profiles.
      allow delete: if isAdmin();
    }

    match /categories/{categoryId} {
      allow get, list: if true;
      allow create, update, delete: if isAdminOrEditor();
    }

    match /folders/{folderId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update, delete: if isOwner(resource.data.createdBy) || isAdminOrEditor();
    }

    match /tags/{tagId} {
      allow get, list: if true;
      allow create, update, delete: if isAdminOrEditor();
    }
    
    match /documents/{documentId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update, delete: if isOwner(resource.data.createdBy) || isAdminOrEditor();
    }
    
    match /users/{userId}/auditLogs/{logId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update, delete: if false;
    }
  }
}
