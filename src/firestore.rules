
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }
    
    // Checks the custom claim on the user's token.
    function hasRole(role) {
      return isSignedIn() && request.auth.token.role == role;
    }

    function isAdmin() {
      return hasRole('Admin');
    }
    
    function isAdminOrEditor() {
      return hasRole('Admin') || hasRole('Editor');
    }

    // A user can create their own user document, but cannot assign a role.
    // Roles can only be assigned via a backend process (Cloud Function).
    match /users/{userId} {
      allow get: if isSignedIn(); // Allow any signed-in user to read user profiles
      allow list: if isAdmin(); // Only admins can list all users
      allow create: if request.auth.uid == userId && !('role' in request.resource.data);
      allow update: if request.auth.uid == userId || isAdmin();
      allow delete: if isAdmin();
    }

    match /categories/{categoryId} {
      allow get, list: if true;
      allow create, update, delete: if isAdminOrEditor();
    }

    match /folders/{folderId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      // Owner of the folder, an Admin, or an Editor can update/delete
      allow update, delete: if request.auth.uid == resource.data.createdBy || isAdminOrEditor();
    }

    match /tags/{tagId} {
      allow get, list: if true;
      allow create, update, delete: if isAdminOrEditor();
    }
    
    match /documents/{documentId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      // Owner of the document, an Admin, or an Editor can update/delete
      allow update, delete: if request.auth.uid == resource.data.createdBy || isAdminOrEditor();
    }
    
    match /users/{userId}/auditLogs/{logId} {
      allow read, write: if request.auth.uid == userId;
    }
  }
}
