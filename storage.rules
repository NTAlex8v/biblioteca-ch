
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permite a los usuarios autenticados subir archivos a una carpeta con su ID de usuario.
    // Esto asegura que los usuarios solo puedan escribir en su propio espacio de almacenamiento.
    match /documents/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
